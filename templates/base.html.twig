<!DOCTYPE html>
<html lang="{{ app.request.locale|default('fr') }}" dir="{{ app.request.locale == 'ar' ? 'rtl' : 'ltr' }}">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{% block title %}E-Commerce Store{% endblock %}</title>
    
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <!-- Font Awesome -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <!-- Custom CSS -->
    <link rel="stylesheet" href="{{ asset('style.css') }}">
    
    {% block stylesheets %}{% endblock %}
</head>
<body>
    <!-- Navigation -->
    <nav class="navbar navbar-expand-lg navbar-dark bg-primary">
        <div class="container">
            <a class="navbar-brand" href="{{ path('app_home') }}">
                <i class="fas fa-shopping-cart me-2"></i>
                {{ 'site.name'|trans }}
            </a>
            
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                <span class="navbar-toggler-icon"></span>
            </button>
            
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav me-auto">
                    <li class="nav-item">
                        <a class="nav-link" href="{{ path('app_home') }}">
                            <i class="fas fa-home me-1"></i>{{ 'nav.home'|trans }}
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="{{ path('app_products') }}">
                            <i class="fas fa-box me-1"></i>{{ 'nav.products'|trans }}
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="{{ path('app_about') }}">
                            <i class="fas fa-info-circle me-1"></i>{{ 'nav.about'|trans }}
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="{{ path('app_contact') }}">
                            <i class="fas fa-envelope me-1"></i>{{ 'nav.contact'|trans }}
                        </a>
                    </li>
                </ul>
                
                <!-- Search Form -->
                <form class="d-flex me-3" action="{{ path('app_search') }}" method="GET">
                    <input class="form-control me-2" type="search" name="q" placeholder="{{ 'search.placeholder'|trans }}" aria-label="Search">
                    <button class="btn btn-outline-light" type="submit">
                        <i class="fas fa-search"></i>
                    </button>
                </form>
                
                <!-- Language Switcher -->
                <div class="dropdown me-3">
                    <button class="btn btn-outline-light dropdown-toggle" type="button" data-bs-toggle="dropdown">
                        <i class="fas fa-globe me-1"></i>{{ app.request.locale|upper }}
                    </button>
                    <ul class="dropdown-menu">
                        <li><a class="dropdown-item" href="{{ path('app_change_locale', {'locale': 'fr'}) }}">Français</a></li>
                        <li><a class="dropdown-item" href="{{ path('app_change_locale', {'locale': 'en'}) }}">English</a></li>
                        <li><a class="dropdown-item" href="{{ path('app_change_locale', {'locale': 'ar'}) }}">العربية</a></li>
                    </ul>
                </div>
                
                <!-- User Menu -->
                <ul class="navbar-nav">
                    {% if app.user %}
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" data-bs-toggle="dropdown">
                                <i class="fas fa-user me-1"></i>{{ app.user.firstName }}
                            </a>
                            <ul class="dropdown-menu">
                                <li><a class="dropdown-item" href="{{ path('app_my_orders') }}">
                                    <i class="fas fa-list me-1"></i>{{ 'nav.my_orders'|trans }}
                                </a></li>
                                <li><hr class="dropdown-divider"></li>
                                <li><a class="dropdown-item" href="{{ path('app_logout') }}">
                                    <i class="fas fa-sign-out-alt me-1"></i>{{ 'nav.logout'|trans }}
                                </a></li>
                            </ul>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="{{ path('app_cart') }}">
                                <i class="fas fa-shopping-cart me-1"></i>
                                <span class="badge bg-danger">{{ app.session.get('cart')|length }}</span>
                            </a>
                        </li>
                    {% else %}
                        <li class="nav-item">
                            <a class="nav-link" href="{{ path('app_login') }}">
                                <i class="fas fa-sign-in-alt me-1"></i>{{ 'nav.login'|trans }}
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="{{ path('app_register') }}">
                                <i class="fas fa-user-plus me-1"></i>{{ 'nav.register'|trans }}
                            </a>
                        </li>
                    {% endif %}
                </ul>
            </div>
        </div>
    </nav>

    <!-- Flash Messages -->
    {% for label, messages in app.flashes %}
        {% for message in messages %}
            <div class="alert alert-{{ label == 'error' ? 'danger' : label }} alert-dismissible fade show" role="alert">
                {{ message }}
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            </div>
        {% endfor %}
    {% endfor %}

    <!-- Main Content -->
    <main class="container my-4">
        {% block body %}{% endblock %}
    </main>

    <!-- Footer -->
    <footer class="bg-dark text-light py-4 mt-5">
        <div class="container">
            <div class="row">
                <div class="col-md-4">
                    <h5>{{ 'footer.about'|trans }}</h5>
                    <p>{{ 'footer.description'|trans }}</p>
                </div>
                <div class="col-md-4">
                    <h5>{{ 'footer.quick_links'|trans }}</h5>
                    <ul class="list-unstyled">
                        <li><a href="{{ path('app_home') }}" class="text-light">{{ 'nav.home'|trans }}</a></li>
                        <li><a href="{{ path('app_products') }}" class="text-light">{{ 'nav.products'|trans }}</a></li>
                        <li><a href="{{ path('app_about') }}" class="text-light">{{ 'nav.about'|trans }}</a></li>
                        <li><a href="{{ path('app_contact') }}" class="text-light">{{ 'nav.contact'|trans }}</a></li>
                    </ul>
                </div>
                <div class="col-md-4">
                    <h5>{{ 'footer.contact'|trans }}</h5>
                    <p><i class="fas fa-phone me-2"></i>+216 XX XXX XXX</p>
                    <p><i class="fas fa-envelope me-2"></i>contact@ecommerce.tn</p>
                    <p><i class="fas fa-map-marker-alt me-2"></i>Tunis, Tunisia</p>
                </div>
            </div>
            <hr>
            <div class="text-center">
                <p>&copy; {{ "now"|date("Y") }} {{ 'site.name'|trans }}. {{ 'footer.rights'|trans }}</p>
            </div>
        </div>
    </footer>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <!-- Custom JS -->
    <script src="{{ asset('app.js') }}"></script>
    
    {% block javascripts %}{% endblock %}
</body>
</html>