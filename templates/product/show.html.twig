{% extends 'base.html.twig' %}

{% block title %}{{ product.name }}{% endblock %}

{% block body %}
<div class="container">
    <nav aria-label="breadcrumb" class="mb-4">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="{{ path('app_home') }}">{{ 'nav.home'|trans }}</a></li>
            <li class="breadcrumb-item"><a href="{{ path('app_products') }}">{{ 'nav.products'|trans }}</a></li>
            <li class="breadcrumb-item"><a href="{{ path('app_products', {'category': product.category.id}) }}">{{ product.category.name }}</a></li>
            <li class="breadcrumb-item active" aria-current="page">{{ product.name }}</li>
        </ol>
    </nav>

    <div class="row">
        <!-- Product Image -->
        <div class="col-lg-6 mb-4">
            <div class="product-image-container">
                {% if product.image %}
                    <img src="{{ asset('images/products/' ~ product.image) }}" 
                         class="img-fluid rounded product-main-image" 
                         alt="{{ product.name }}">
                {% else %}
                    <div class="product-placeholder bg-light d-flex align-items-center justify-content-center rounded" style="height: 400px;">
                        <i class="fas fa-box fa-5x text-muted"></i>
                    </div>
                {% endif %}
            </div>
        </div>

        <!-- Product Details -->
        <div class="col-lg-6">
            <div class="product-details">
                <h1 class="product-title mb-3">{{ product.name }}</h1>
                
                <div class="product-meta mb-4">
                    <span class="badge bg-primary me-2">{{ product.category.name }}</span>
                    <span class="badge bg-{{ product.stock > 0 ? 'success' : 'danger' }}">
                        {{ product.stock > 0 ? product.stock ~ ' ' ~ ('product.in_stock'|trans) : ('product.out_of_stock'|trans) }}
                    </span>
                </div>

                <div class="product-price mb-4">
                    <span class="h2 text-primary fw-bold">{{ product.price|number_format(2) }} DT</span>
                </div>

                <div class="product-description mb-4">
                    <h5>{{ 'product.description'|trans }}</h5>
                    <p class="text-muted">{{ product.description|nl2br }}</p>
                </div>

                {% if app.user %}
                    {% if product.stock > 0 %}
                        <form action="{{ path('app_cart_add', {'id': product.id}) }}" method="POST" class="mb-4">
                            <div class="row align-items-end">
                                <div class="col-md-4">
                                    <label for="quantity" class="form-label">{{ 'product.quantity'|trans }}</label>
                                    <input type="number" class="form-control" id="quantity" name="quantity" 
                                           value="1" min="1" max="{{ product.stock }}" required>
                                </div>
                                <div class="col-md-8">
                                    <button type="submit" class="btn btn-primary btn-lg w-100">
                                        <i class="fas fa-cart-plus me-2"></i>{{ 'product.add_to_cart'|trans }}
                                    </button>
                                </div>
                            </div>
                        </form>
                    {% else %}
                        <div class="alert alert-warning">
                            <i class="fas fa-exclamation-triangle me-2"></i>
                            {{ 'product.out_of_stock'|trans }}
                        </div>
                    {% endif %}
                {% else %}
                    <div class="alert alert-info">
                        <i class="fas fa-info-circle me-2"></i>
                        {{ 'product.login_to_buy'|trans }}
                        <a href="{{ path('app_login') }}" class="btn btn-primary ms-3">
                            <i class="fas fa-sign-in-alt me-1"></i>{{ 'nav.login'|trans }}
                        </a>
                    </div>
                {% endif %}

                <div class="product-info">
                    <div class="row">
                        <div class="col-6">
                            <small class="text-muted">{{ 'product.category'|trans }}</small>
                            <p class="mb-0">{{ product.category.name }}</p>
                        </div>
                        <div class="col-6">
                            <small class="text-muted">{{ 'product.stock'|trans }}</small>
                            <p class="mb-0">{{ product.stock }}</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Related Products -->
    <section class="related-products mt-5">
        <h3 class="mb-4">{{ 'product.related_products'|trans|default('Produits similaires') }}</h3>
        <div class="row">
            {% for relatedProduct in product.category.products|slice(0, 4) %}
                {% if relatedProduct.id != product.id %}
                    <div class="col-lg-3 col-md-6 mb-4">
                        <div class="card product-card h-100">
                            {% if relatedProduct.image %}
                                <img src="{{ asset('images/products/' ~ relatedProduct.image) }}" class="card-img-top" alt="{{ relatedProduct.name }}">
                            {% else %}
                                <div class="card-img-top bg-light d-flex align-items-center justify-content-center" style="height: 200px;">
                                    <i class="fas fa-box fa-3x text-muted"></i>
                                </div>
                            {% endif %}
                            <div class="card-body d-flex flex-column">
                                <h5 class="card-title">{{ relatedProduct.name }}</h5>
                                <p class="card-text text-muted">{{ relatedProduct.description|slice(0, 100) }}...</p>
                                <div class="mt-auto">
                                    <div class="d-flex justify-content-between align-items-center mb-3">
                                        <span class="h5 text-primary mb-0">{{ relatedProduct.price|number_format(2) }} DT</span>
                                        <span class="badge bg-{{ relatedProduct.stock > 0 ? 'success' : 'danger' }}">
                                            {{ relatedProduct.stock > 0 ? ('product.in_stock'|trans) : ('product.out_of_stock'|trans) }}
                                        </span>
                                    </div>
                                    <a href="{{ path('app_product_show', {'id': relatedProduct.id}) }}" class="btn btn-outline-primary w-100">
                                        <i class="fas fa-eye me-1"></i>{{ 'product.view_details'|trans }}
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>
                {% endif %}
            {% endfor %}
        </div>
    </section>
</div>
{% endblock %}

{% block stylesheets %}
<style>
.product-main-image {
    width: 100%;
    height: 400px;
    object-fit: cover;
    border-radius: 0.5rem;
    box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
}

.product-title {
    color: var(--dark-color);
    font-weight: 700;
}

.product-price {
    border-bottom: 2px solid var(--light-color);
    padding-bottom: 1rem;
}

.product-info {
    background: var(--light-color);
    padding: 1rem;
    border-radius: var(--border-radius);
    margin-top: 2rem;
}

.related-products .card {
    transition: transform 0.3s ease;
}

.related-products .card:hover {
    transform: translateY(-5px);
}
</style>
{% endblock %}